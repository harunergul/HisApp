<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.erc.his.entity.StaffDTO" table="AHSTAFF">

		<id name="staffId" column="STAFFID" type="java.lang.Long">
			<generator class="increment" />
		</id>
		<property name="employeNo" column="EMPLOYENO" type="java.lang.String" />
		<property name="firstName" column="FIRSTNAME" type="java.lang.String" />
  		<property name="lastName" column="LASTNAME" type="java.lang.String" />
  		<property name="identificationNo" column="IDENTIFICATIONNO" type="java.lang.String" />
  		<property name="birthDate" column="BIRTHDATE" type="java.util.Date" />
  		<property name="birthPlace" column="BIRTHPLACE" type="java.lang.String" />
  		<property name="organizationId" column="ORGANIZATIONID" type="java.lang.Long" />
  		<property name="staffTitleId" column="STAFFTITLEID" type="java.lang.Long" />
  		<property name="maritalStatusId" column="MARITALSTATUSID" type="java.lang.Long" />
  		<property name="genderId" column="GENDERID" type="java.lang.Long" />
  		<property name="bloodGroupId" column="BLOODGROUPID" type="java.lang.Long" />
  		<property name="phoneNumber" column="PHONENUMBER" type="java.lang.String" />
  		<property name="militaryStatusId" column="MILITARYSTATUSID" type="java.lang.Long" />
  		<property name="workStartDate" column="WORKSTARTDATE" type="java.util.Date" />
  		<property name="active" column="active" type="java.lang.String" />
  		<property name="status" column="STATUS" type="java.lang.String" />
	</class>
</hibernate-mapping>