<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.erc.his.entity.PatientDTO" table="AHPATIENT">

		<id name="patientId" column="PATIENTID" type="java.lang.Long">
			<generator class="increment" />
		</id>
		<property name="identificationNo" column="IDENTIFICATIONNO" type="java.lang.String" />
		<property name="patientNo" column="PATIENTNO" type="java.lang.String" />
		<property name="firstName" column="FIRSTNAME" type="java.lang.String" />
		<property name="lastName" column="LASTNAME" type="java.lang.String" />
		<property name="birthDate" column="BIRTHDATE" type="java.util.Date" />
		<property name="maritalStatus" column="MARITALSTATUS" type="java.lang.String" />
		<property name="bloodGroup" column="BLOODGROUP" type="java.lang.String" />
		<property name="gender" column="GENDER" type="java.lang.String" />
		<property name="status" column="STATUS" type="java.lang.String" />
	</class>
</hibernate-mapping>